rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isCollegeHead() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'collageHead';
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isSameCollege(resourceCollege) {
      return isSignedIn() && resourceCollege == getUserData().college;
    }

    // Users collection
    match /users/{userId} {
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow read: if (isSignedIn() && request.auth.uid == userId) || isAdmin() || 
                 (isCollegeHead() && isSameCollege(resource.data.college));
      allow update: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /users {
      allow list: if isAdmin() || isCollegeHead();
    }

    // Teams collection
    match /teams/{teamId} {
      allow read: if true;
      allow create, update: if isAdmin() || 
                           (isCollegeHead() && isSameCollege(request.resource.data.collegeName));
      allow delete: if isAdmin();
    }
    
    match /teams {
      allow list: if true;
    }
    
    // Players collection
    match /players/{playerId} {
      allow read: if isSignedIn();
      allow create: if isCollegeHead() && 
                   isSameCollege(request.resource.data.college) &&
                   request.resource.data.assignedBy == request.auth.uid;
      allow update, delete: if isAdmin() || 
                            (isCollegeHead() && 
                             request.resource.data.assignedBy == request.auth.uid);
    }
    
    match /players {
      allow list: if isSignedIn();
    }

    match /games/{gameId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /games {
      allow list: if true;
    }

    match /selections/{docId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    match /results/{resultId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /results {
      allow list: if true;
    }

    match /goals/{goalId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /goals {
      allow list: if true;
    }

    match /cards/{cardId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /cards {
      allow list: if true;
    }

    match /unique_results/{resultId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /unique_results {
      allow list: if true;
    }

    match /unique_goals/{goalId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /unique_goals {
      allow list: if true;
    }

    match /unique_cards/{cardId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /unique_cards {
      allow list: if true;
    }

    // Live result collections (league)
    match /live_results/{resultId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /live_results {
      allow list: if true;
    }
    match /live_goals/{goalId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /live_goals {
      allow list: if true;
    }
    match /live_cards/{cardId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /live_cards {
      allow list: if true;
    }

    // Live result collections (round-off / unique)
    match /unique_live_results/{resultId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /unique_live_results {
      allow list: if true;
    }
    match /unique_live_goals/{goalId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /unique_live_goals {
      allow list: if true;
    }
    match /unique_live_cards/{cardId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /unique_live_cards {
      allow list: if true;
    }

    match /userIds/{studentId} {
      allow create: if isSignedIn() && request.resource.data.ownerUid == request.auth.uid;
      allow read: if isSignedIn();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    match /userIds {
      allow list: if isAdmin();
    }

    match /groups/{groupId} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }
    match /groups {
      allow list: if true;
    }

    match /unique_game/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /unique_game {
      allow list: if true;
    }

    match /blogPosts/{postId} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }
    match /blogPosts {
      allow list: if true;
    }

    match /vlogs/{vlogId} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }
    match /vlogs {
      allow list: if true;
    }

    // Live texts for homepage ticker
    match /live_texts/{docId} {
      allow read: if true; // homepage needs to read without auth
      allow create, update, delete: if isAdmin(); // only admins can post/manage
    }
    match /live_texts {
      allow list: if true;
    }
  }
}